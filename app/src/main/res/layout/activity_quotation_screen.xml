<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.sandclan.currencyquotation.QuotationScreen">

    <LinearLayout
        android:id="@+id/layout_currencies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/quotation_screen_currencies_layout_margin_top"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quotation_screen_from"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerConverterFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/quotation_screen_spinner_min_width" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quotation_screen_to"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerConverterTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/quotation_screen_spinner_min_width" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/quotation_screen_value_margin_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quotation_screen_converter_value"
                android:textSize="@dimen/quotation_screen_value_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editTValueToConvert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/quotation_screen_value_to_convert_margin_left"
                android:maxLines="1"
                android:textSize="@dimen/quotation_screen_value_to_convert_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quotation_screen_result"
                android:textSize="@dimen/quotation_screen_result_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/quotation_screen_result_value_margin_left"
                android:maxLines="1"
                android:textSize="@dimen/quotation_screen_result_value_text_size"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_green_light"
                android:onClick="buttonClicked"
                android:tag="1"
                android:text="1"
                android:textStyle="bold">

            </Button>

            <Button
                android:id="@+id/btn02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_green_light"
                android:onClick="buttonClicked"
                android:tag="2"
                android:text="2"
                android:textStyle="bold">

            </Button>

            <Button
                android:id="@+id/btn03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_green_light"
                android:onClick="buttonClicked"
                android:tag="3"
                android:text="3"
                android:textStyle="bold">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_green_light"
                android:onClick="buttonClicked"
                android:tag="4"
                android:text="4"
                android:textStyle="bold">

            </Button>

            <Button
                android:id="@+id/btn05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_green_light"
                android:onClick="buttonClicked"
                android:tag="5"
                android:text="5"
                android:textStyle="bold">

            </Button>

            <Button
                android:id="@+id/btn06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_green_light"
                android:onClick="buttonClicked"
                android:tag="6"
                android:text="6"
                android:textStyle="bold">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_green_light"
                android:onClick="buttonClicked"
                android:tag="7"
                android:text="7"
                android:textStyle="bold">

            </Button>

            <Button
                android:id="@+id/btn08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_green_light"
                android:onClick="buttonClicked"
                android:tag="8"
                android:text="8"
                android:textStyle="bold">

            </Button>

            <Button
                android:id="@+id/btn09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_green_light"
                android:onClick="buttonClicked"
                android:tag="9"
                android:text="9"
                android:textStyle="bold">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_span="1"
                android:background="@android:color/holo_green_light"
                android:onClick="buttonClicked"
                android:tag="0"
                android:text="0"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/btnDel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_span="1"
                android:background="@android:color/holo_green_light"
                android:onClick="buttonClicked"
                android:tag="X"
                android:text="&lt;--"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_span="1"
                android:background="@android:color/holo_green_light"
                android:onClick="buttonClicked"
                android:tag="="
                android:text="="
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>




</LinearLayout>
